@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@500&family=Press+Start+2P&display=swap');

* {
  font-family: 'Noto Sans KR', sans-serif;
}


h1 {
  font-size: 3.5rem;
  font-weight: 800;
}

h1 a.header-anchor,
h2 a.header-anchor,
h3 a.header-anchor,
h4 a.header-anchor,
h5 a.header-anchor,
h6 a.header-anchor {
  color: $accentColor;
  text-decoration: none;
}


.page a {
  color: $textColor;
  text-decoration: underline;

  &:hover {
    color: $accentColor;
  }
}

code[class*="language-"],
pre[class*="language-"],
pre[class*="language-"] span,
kbd, .line-number {
  font-family: 'Consolas','Noto Sans KR', sans-serif;
}


.theme-container.custom-page-class {
    .title-area h1 {
    background-color: #ffcb1f;
    text-align: right;
    word-wrap: break-word;
    font-family: "Press Start 2P";
    padding: 1rem;
  }

  .last-updated {
    .prefix, .time{
      color: transparent;
    }
  }

  .recent-posts a {
    color: $textColor;
    
    &:hover{
      text-decoration: underline;
      color: $accentColor;
    }
  }

  .info-area {
    text-align: right;
  }

  @media (max-width: 500px) {
    .title-area h1 {
      font-size: 1.6rem;
    }
  }
}